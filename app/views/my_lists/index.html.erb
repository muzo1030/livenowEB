<body>
	<div class="container">
		<div id="searchbox" class="draggable center hoverable">
			<%= form_tag search_videos_path, :method => 'get' , :style => "display: flex;"  do %>
			<%= text_field_tag :search, params[:search], :placeholder => "", :class => "input-field", :style => "height: 2.5rem;" %>
			<%= button_tag :type => "submit", :name => nil , :class => "btn waves-effect waves-light", :style => "height: 2.5rem;" do %>
			<i class="fa fa-search faa-vertical animated-hover"></i>
			<% end %>
			<% end %>

			<div>
				<%= link_to " logout", destroy_user_session_path, class: "fa fa-sign-out", method: :delete %>
				<%= link_to " signup", new_user_registration_path, class: "fa fa-sign-in"%></li>
				<%= link_to " login", new_user_session_path, class: "fa fa-sign-in"%>
				<%= link_to " mypage", my_lists_path, class: "fa fa-user"%>
			</div>
			<div class="page">
				<%= paginate @my_lists %>
			</div>
		</div>

		<% @my_lists.each do |movie| %>
			<div id="drag" class="draggable hoverable">
				<% if current_user.my_lists.where(video_id: movie.video_id).exists? %>
					<%= link_to my_list_path(movie.video_id), remote: true, method: :delete, id: "favorite-heart#{movie.video_id}" do %>
						<i class="fas fa-heart faa-ring animated-hover z-depth-5" style="color: red;"></i>
					<% end %>
				<% else %>
					<%= link_to my_lists_path(movie.video_id), remote: true, method: :post, id: "favorite-heart#{movie.video_id}" do %>
						<i class="far fa-heart faa-wrench animated-hover z-depth-5" style="color: red;"></i>
					<% end %>
				<% end %>
					<%= content_tag(:iframe, '', src: "https://www.youtube.com/embed/#{movie.video_id}", width: "90%", height: "100%", frameborder: 0, allowfullscreen:true) %>
			</div>
		<% end %>
	</div>
</body>

